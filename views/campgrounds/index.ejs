<% include ../partials/header %>

<div class='container'>
	<header class='jumbotron'>
		<div class='container'>
			<h1>Check out our <strong>Finest</strong> Campgrounds!</h1>
			<p>
				Each one is hand-picked from around the world!
			</p>
			<p>
				<a href="/campgrounds" class="btn btn-md btn-success inline">View All Campgrounds</a>
				<a href='/campgrounds/new' class='btn btn-primary btn-md'>Add a Campground <i class="fas fa-campground"></i></a>
			</p>
			
			<p>
				<form action='/campgrounds' method='GET' class='form-inline'>
					<div class='form-group'>
						<input type='text' name='search' placeholder='Campground Search' class='form-control'>
						<input type='submit' value='search' class='btn btn-default'>
					</div>
				</form>
			</p>
		</div>
	</header>
	
	<div class='row text-center' style='display:flex; flex-wrap: wrap;'>
		<div class='col-md-12'>
			<% if(noMatch !== undefined) { %>
				<h3><%= noMatch %></h3>
			<% } %>
		<% campgrounds.forEach((campground) => { %>
			<div class='col-md-3 col-sm-6'>
				<div class='thumbnail'>
					<img src='<%= campground.image %>'>
					<div class='caption'>
						<h4><%= campground.name %></h4>
						<p><%= campground.description.substring(0, 100) %>...</p>
					</div>
					<p>
						<a href='/campgrounds/<%= campground._id %>' class='btn btn-primary'>More info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>




<% include ../partials/footer %>