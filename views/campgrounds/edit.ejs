<% include ../partials/header.ejs %>

<div><a class='btn btn-default' href='/campgrounds'>All Campgrounds</a></div>

<div class='container'>
	<div class='row'>
		<h1 style='text-align: center;'>
			Edit <a href='/campgrounds/<%= campground._id %>'><%= campground.name %></a>
		</h1>
		<div style='width: 40%; margin: 30px auto;'>
			<form action='/campgrounds/<%= campground._id %>?_method=PUT' method='POST'>
				<div class='form-group'>
					<label for="Name">Camp Name</label>
					<input class='form-control' type='text' name='campground[name]' value='<%= campground.name %>'>
				</div>
				<div class='form-group'>
					<label for="price">Price Per Night</label>
					<input class='form-control' type='number' name='campground[price]' value='<%= campground.price %>' min-'0.01' step='0.01'>
				</div>
				<div class='form-group'>
					<label for="image">Image</label>
					<input class='form-control' type='text' name='campground[image]' value='<%= campground.image %>'>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
				</div>
				<div class='form-group'>
					<label for="description">Description</label>
					<textarea class='form-control' rows="10" cols="10" wrap="hard" maxlength="900" name='description' Value=''><%= campground.description %></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary center-block' style='padding: 5px 30px;'>
					Edit Camp!
					</button>
				</div>	
			</form>
	</div>
	
</div>
<% include ../partials/footer %>