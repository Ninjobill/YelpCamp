<div class='container'>
	<div class='row'>
		<h1 style='text-align: center;'>
			Edit Comment!
		</h1>
		<div style='width: 40%; margin: 30px auto;'>
			<form action='/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
				<div class='form-group'>
					<input class='form-control' type='text' name='comment[text]' value='<%= comment.text %>'>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-success center-block' style='padding: 5px 30px;'>
					 Edit Comment
					</button>
				</div>	
			</form>
		</div>	
	</div>	
</div>

